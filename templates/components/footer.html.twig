    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Application principale
        const TabLogistique = {
            init() {
                this.updateYear();
                this.startSessionTimer();
                this.animateCounter();
                this.setupEventListeners();
            },

            updateYear() {
                document.getElementById('currentYear').textContent = new Date().getFullYear();
            },

            startSessionTimer() {
                let sessionStart = Date.now() - (2 * 3600 + 34 * 60 + 12) * 1000; // Simuler 2h34m12s
                
                setInterval(() => {
                    const elapsed = Date.now() - sessionStart;
                    const hours = Math.floor(elapsed / 3600000);
                    const minutes = Math.floor((elapsed % 3600000) / 60000);
                    const seconds = Math.floor((elapsed % 60000) / 1000);
                    
                    document.getElementById('sessionTimer').textContent = 
                        `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                }, 1000);
            },

            animateCounter() {
                const counter = document.getElementById('colisCounter');
                const target = 1247;
                let current = 0;
                const increment = target / 100;
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    counter.textContent = Math.floor(current).toLocaleString();
                }, 30);
            },

            setupEventListeners() {
                // Gestion des événements pour l'accessibilité
                document.addEventListener('keydown', (e) => {
                    if (e.key === 'Tab') {
                        document.body.classList.add('keyboard-navigation');
                    }
                });

                document.addEventListener('mousedown', () => {
                    document.body.classList.remove('keyboard-navigation');
                });
            },

            showNotification(message, type = 'info') {
                const notification = document.createElement('div');
                notification.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
                notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
                notification.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.remove();
                    }
                }, 5000);
            }
        };

        // Fonctions globales pour les boutons
        function showHelp() {
            TabLogistique.showNotification(`
                <i class="fas fa-question-circle me-2"></i>
                <strong>Centre d'Aide</strong><br>
                Documentation et guides d'utilisation disponibles.
            `, 'info');
        }

        function showSystemInfo() {
            TabLogistique.showNotification(`
                <i class="fas fa-server me-2"></i>
                <strong>Informations Système</strong><br>
                Version 3.2.1 • Symfony 6.4 • PHP 8.2
            `, 'info');
        }

        function reportIssue() {
            const issue = prompt('Décrivez brièvement le problème rencontré :');
            if (issue && issue.trim()) {
                TabLogistique.showNotification(`
                    <i class="fas fa-check-circle me-2"></i>
                    <strong>Rapport envoyé</strong><br>
                    Merci pour votre retour !
                `, 'success');
            }
        }

        function showPrivacy() {
            TabLogistique.showNotification(`
                <i class="fas fa-shield-alt me-2"></i>
                <strong>Politique de Confidentialité</strong><br>
                Vos données sont protégées selon nos standards de sécurité.
            `, 'info');
        }

        function showTerms() {
            TabLogistique.showNotification(`
                <i class="fas fa-file-contract me-2"></i>
                <strong>Conditions d'Utilisation</strong><br>
                Consultez nos CGU pour plus d'informations.
            `, 'info');
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', () => {
            TabLogistique.init();
        });

        // Gestion des thèmes
        const toggleTheme = () => {
            document.body.classList.toggle('dark-theme');
            const isDark = document.body.classList.contains('dark-theme');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            
            TabLogistique.showNotification(`
                <i class="fas fa-${isDark ? 'moon' : 'sun'} me-2"></i>
                Mode ${isDark ? 'sombre' : 'clair'} activé
            `, 'info');
        };

        // Charger le thème sauvegardé
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-theme');
        }
    </script>
</body>
