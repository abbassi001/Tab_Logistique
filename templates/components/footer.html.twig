        background: rgba(52, 73, 94, 0.5);
        padding: 10px 15px;
        border-radius: 6px;
        border: 1px solid rgba(255,255,255,0.1);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .footer {
            text-align: center;
        }

        .footer-subtitle {
            margin-top: 2rem;
        }

        .footer-subtitle:first-child {
            margin-top: 0;
        }

        .contact-info .contact-item {
            justify-content: center;
        }

        .support-links {
