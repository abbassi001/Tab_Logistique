{% extends 'base.html.twig' %}

{% block title %}Création d'un compte utilisateur{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-user-plus me-2"></i>Créer un nouveau compte utilisateur</h2>
                </div>
                <div class="card-body">
                    {% for flash_error in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ flash_error }}
                        </div>
                    {% endfor %}
                    
                    {% for flash_success in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ flash_success }}
                        </div>
                    {% endfor %}

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Ce formulaire vous permet de créer un compte pour un employé. L'employé sera automatiquement associé au compte utilisateur créé.
                    </div>

                    {{ form_errors(userForm) }}
                    {{ form_errors(employeForm) }}

                    <form method="post">
                        <div class="row mb-4">
                            <div class="col-12">
                                <h4 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-address-card me-2"></i>Informations de l'employé
                                </h4>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.prenom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.telephone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.departement, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(employeForm.niveau_acces, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-12">
                                <h4 class="border-bottom pb-2 mb-3">
                                    <i class="fas fa-user-lock me-2"></i>Informations du compte
                                </h4>
                            </div>
                            
                            <div class="col-md-12 mb-3">
                                {{ form_row(userForm.email, {'attr': {'class': 'form-control'}}) }}
                                <small class="form-text text-muted">Cet email sera utilisé pour la connexion au système.</small>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(userForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                {{ form_row(userForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            
                            <div class="col-md-12 mb-3">
                                <div class="form-check">
                                    {{ form_widget(userForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(userForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_employe_index') }}" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Créer le compte
                            </button>
                        </div>
                        
                        {{ form_rest(userForm) }}
                        {{ form_rest(employeForm) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}