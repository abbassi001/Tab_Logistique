{% extends 'base.html.twig' %}

{% block title %}Statut index{% endblock %}

{% block body %}
    <h1>Statut index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_status</th>
                <th>Date_status</th>
                <th>Localisation</th>
                <th>Employé</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.id }}</td>
                <td>{{ statut.idStatus }}</td>
                <td>{{ statut.dateStatus ? statut.dateStatus|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ statut.localisation }}</td>
                <td>{% if statut.employe %}{{ statut.employe.prenom }} {{ statut.employe.nom }}{% else %}Non assigné{% endif %}</td>
                <td>
                    <a href="{{ path('app_statut_show', {'id': statut.id}) }}">show</a>
                    <a href="{{ path('app_statut_edit', {'id': statut.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_statut_new') }}">Create new</a>
{% endblock %}