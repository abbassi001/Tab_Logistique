{% extends 'base.html.twig' %}

{% block title %}Statut{% endblock %}

{% block body %}
    <h1>Statut</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ statut.id }}</td>
            </tr>
            <tr>
                <th>Id_status</th>
                <td>{{ statut.idStatus }}</td>
            </tr>
            <tr>
                <th>Date_status</th>
                <td>{{ statut.dateStatus ? statut.dateStatus|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ statut.localisation }}</td>
            </tr>
            <tr>
                <th>Employé responsable</th>
                <td>{% if statut.employe %}{{ statut.employe.prenom }} {{ statut.employe.nom }}{% else %}Non assigné{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_statut_index') }}">back to list</a>

    <a href="{{ path('app_statut_edit', {'id': statut.id}) }}">edit</a>

    {{ include('statut/_delete_form.html.twig') }}
{% endblock %}