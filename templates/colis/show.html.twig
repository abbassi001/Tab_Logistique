{% extends 'base.html.twig' %}

{% block title %}Détails du Colis - TAB Logistique{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/modules/colis.css') }}">
    <link rel="stylesheet" href="{{ asset('css/print.css') }}" media="print">
{% endblock %}

{% block sidebar %}
<nav class="col-md-2 d-none d-md-block sidebar">
    <div class="position-sticky pt-3">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_colis_index') }}">
                    <i class="fas fa-list me-2"></i>Liste des Colis
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_colis_wizard_start') }}">
                    <i class="fas fa-plus me-2"></i>Nouveau Colis
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    <i class="fas fa-eye me-2"></i>Détails du Colis
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_colis_edit', {'id': coli.id}) }}">
                    <i class="fas fa-edit me-2"></i>Modifier le Colis
                </a>
            </li>
        </ul>
    </div>
</nav>
{% endblock %}

{% block main_class %}col-md-10{% endblock %}

{% block body %}
    <!-- Messages flash -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mb-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container-fluid mx-auto px-4 py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-box me-2 text-primary"></i>Détails du Colis</h1>
                <p class="text-muted">Informations complètes et suivi du colis</p>
            </div>
            <div>
                <a href="{{ path('app_colis_index') }}" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Retour à la liste
                </a>
                <a href="{{ path('app_colis_edit', {'id': coli.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Modifier
                </a>
            </div>
        </div>

        <!-- Code de tracking mis en évidence -->
        <div class="card shadow-sm mb-4 text-center border-primary border-top-0 border-end-0 border-bottom-0 border-3">
            <div class="card-body py-3">
                <h5 class="text-muted mb-1">Code de suivi</h5>
                <div class="d-flex align-items-center justify-content-center">
                    <span class="badge bg-primary fs-3 p-2">{{ coli.codeTracking }}</span>
                    <button class="btn btn-sm btn-outline-primary ms-2" onclick="copyToClipboard('{{ coli.codeTracking }}')">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Informations du colis -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-4 border-primary border-top-0 border-end-0 border-bottom-0 border-3">
                    <div class="card-header bg-light py-3">
                        <h5 class="mb-0 fw-bold text-primary">
                            <i class="fas fa-info-circle me-2"></i>Informations du Colis
                        </h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th class="bg-light">Nature de marchandise</th>
                                    <td>{{ coli.natureMarchandise }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Description</th>
                                    <td>{{ coli.descriptionMarchandise ?: 'Aucune description' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Classification douanière</th>
                                    <td>{{ coli.classificationDouaniere }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Dimensions</th>
                                    <td>{{ coli.dimensions }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Détails (L × l × h)</th>
                                    <td>
                                        {{ coli.longueur|number_format(2) }} × 
                                        {{ coli.largeur|number_format(2) }} × 
                                        {{ coli.hauteur|number_format(2) }} cm
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Poids</th>
                                    <td>{{ coli.poids }} kg</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Valeur déclarée</th>
                                    <td>{{ coli.valeurDeclaree }} €</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Date de création</th>
                                    <td>{{ coli.dateCreation ? coli.dateCreation|date('d/m/Y H:i') : '' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Entrepôt</th>
                                    <td>
                                        {% if coli.warehouse %}
                                            {{ coli.warehouse.codeUt }} - {{ coli.warehouse.localisationWarehouse }}
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <!-- Expéditeur et Destinataire -->
            <div class="col-md-6">
                <div class="row">
                    <!-- Expéditeur -->
                    <div class="col-md-12">
                        <div class="card shadow-sm mb-4 border-success border-top-0 border-end-0 border-bottom-0 border-3">
                            <div class="card-header bg-light py-3">
                                <h5 class="mb-0 fw-bold text-success">
                                    <i class="fas fa-paper-plane me-2"></i>Expéditeur
                                </h5>
                            </div>
                            <div class="card-body">
                                {% if coli.expediteur %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5 class="mb-3">{{ coli.expediteur.nomEntrepriseIndividu }}</h5>
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-success"></i>{{ coli.expediteur.adresseComplete }}</li>
                                                <li class="mb-2"><i class="fas fa-globe me-2 text-success"></i>{{ coli.expediteur.pays }}</li>
                                                <li class="mb-2"><i class="fas fa-phone me-2 text-success"></i>{{ coli.expediteur.telephone }}</li>
                                                <li><i class="fas fa-envelope me-2 text-success"></i>{{ coli.expediteur.email }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning mb-0">
                                        <i class="fas fa-exclamation-triangle me-2"></i>Aucun expéditeur défini
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Destinataire -->
                    <div class="col-md-12">
                        <div class="card shadow-sm mb-4 border-danger border-top-0 border-end-0 border-bottom-0 border-3">
                            <div class="card-header bg-light py-3">
                                <h5 class="mb-0 fw-bold text-danger">
                                    <i class="fas fa-map-marker-alt me-2"></i>Destinataire
                                </h5>
                            </div>
                            <div class="card-body">
                                {% if coli.destinataire %}
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5 class="mb-3">{{ coli.destinataire.nomEntrepriseIndividu }}</h5>
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-danger"></i>{{ coli.destinataire.adresseComplete }}</li>
                                                <li class="mb-2"><i class="fas fa-globe me-2 text-danger"></i>{{ coli.destinataire.pays }}</li>
                                                <li class="mb-2"><i class="fas fa-phone me-2 text-danger"></i>{{ coli.destinataire.telephone }}</li>
                                                {% if coli.destinataire.email %}
                                                    <li><i class="fas fa-envelope me-2 text-danger"></i>{{ coli.destinataire.email }}</li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning mb-0">
                                        <i class="fas fa-exclamation-triangle me-2"></i>Aucun destinataire défini
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Actions rapides Section -->
        <div class="my-4">
            <div class="card shadow-sm mb-4 border-warning border-top-0 border-end-0 border-bottom-0 border-3">
                <div class="card-header bg-light py-3">
                    <h5 class="mb-0 fw-bold text-warning">
                        <i class="fas fa-bolt me-2"></i>Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Photos Button -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card shadow-sm h-100 text-center p-3 bg-white hover-shadow" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#photoModal">
                                <div class="d-flex justify-content-center mb-2">
                                    <span class="rounded-circle p-3 bg-light">
                                        <i class="fas fa-camera text-primary fa-2x"></i>
                                    </span>
                                </div>
                                <span class="fw-medium">Ajouter des photos</span>
                            </div>
                        </div>
                        
                        <!-- Documents Button -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card shadow-sm h-100 text-center p-3 bg-white hover-shadow" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#documentModal">
                                <div class="d-flex justify-content-center mb-2">
                                    <span class="rounded-circle p-3 bg-light">
                                        <i class="fas fa-file-alt text-success fa-2x"></i>
                                    </span>
                                </div>
                                <span class="fw-medium">Ajouter des documents</span>
                            </div>
                        </div>
                        
                        <!-- Transport Button -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card shadow-sm h-100 text-center p-3 bg-white hover-shadow" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#transportModal">
                                <div class="d-flex justify-content-center mb-2">
                                    <span class="rounded-circle p-3 bg-light">
                                        <i class="fas fa-truck text-warning fa-2x"></i>
                                    </span>
                                </div>
                                <span class="fw-medium">Ajouter un transport</span>
                            </div>
                        </div>
                        
                        <!-- Status Update Button -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card shadow-sm h-100 text-center p-3 bg-white hover-shadow" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#statutModal">
                                <div class="d-flex justify-content-center mb-2">
                                    <span class="rounded-circle p-3 bg-light">
                                        <i class="fas fa-clipboard-list text-danger fa-2x"></i>
                                    </span>
                                </div>
                                <span class="fw-medium">Mettre à jour le statut</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Onglets d'information -->
        <div class="card shadow-sm mb-4">
            <div class="card-header p-0 border-bottom-0">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="statuts-tab" data-bs-toggle="tab" data-bs-target="#statuts" type="button" role="tab" aria-controls="statuts" aria-selected="true">
                            <i class="fas fa-tasks me-2"></i>Statuts
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="transports-tab" data-bs-toggle="tab" data-bs-target="#transports" type="button" role="tab" aria-controls="transports" aria-selected="false">
                            <i class="fas fa-truck me-2"></i>Transports
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="photos-tab" data-bs-toggle="tab" data-bs-target="#photos" type="button" role="tab" aria-controls="photos" aria-selected="false">
                            <i class="fas fa-camera me-2"></i>Photos
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="documents-tab" data-bs-toggle="tab" data-bs-target="#documents" type="button" role="tab" aria-controls="documents" aria-selected="false">
                            <i class="fas fa-file-alt me-2"></i>Documents
                        </button>
                    </li>
                </ul>
            </div>
            <div class="card-body border-top-0">
                <div class="tab-content" id="myTabContent">
                    <!-- Onglet Statuts -->
                    <div class="tab-pane fade show active" id="statuts" role="tabpanel" aria-labelledby="statuts-tab">
                        {% if coli.statuts is defined and coli.statuts|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead class="bg-light">
                                        <tr>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Localisation</th>
                                            <th>Employé</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for statut in coli.statuts %}
                                            <tr>
                                                <td>{{ statut.dateStatut ? statut.dateStatut|date('d/m/Y H:i') : '' }}</td>
                                                <td>
                                                    {% if statut.typeStatut %}
                                                        <span class="badge bg-info">{{ statut.typeStatut.getLabel() }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>{{ statut.localisation }}</td>
                                                <td>
                                                    {% if statut.employe %}
                                                        <i class="fas fa-user me-1 text-primary"></i> {{ statut.employe.prenom }} {{ statut.employe.nom }}
                                                    {% else %}
                                                        <span class="text-muted">Non assigné</span>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Aucun statut enregistré pour ce colis
                            </div>
                            <div class="text-center py-3">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#statutModal">
                                    <i class="fas fa-plus-circle me-1"></i> Ajouter un statut
                                </button>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Onglet Transports -->
                    <div class="tab-pane fade" id="transports" role="tabpanel" aria-labelledby="transports-tab">
                        {% if coli.colisTransports is defined and coli.colisTransports|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead class="bg-light">
                                        <tr>
                                            <th>Type</th>
                                            <th>Compagnie</th>
                                            <th>Départ</th>
                                            <th>Arrivée</th>
                                            <th>Date d'association</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for colisTransport in coli.colisTransports %}
                                            <tr>
                                                <td>{{ colisTransport.transport.typeTransport }}</td>
                                                <td>{{ colisTransport.transport.compagnieTransport }}</td>
                                                <td>
                                                    <span class="fw-medium">{{ colisTransport.transport.lieuDepart }}</span>
                                                    <br>
                                                    <small class="text-muted">{{ colisTransport.transport.dateDepart ? colisTransport.transport.dateDepart|date('d/m/Y H:i') : 'Non définie' }}</small>
                                                </td>
                                                <td>
                                                    <span class="fw-medium">{{ colisTransport.transport.lieuArrivee }}</span>
                                                    <br>
                                                    <small class="text-muted">{{ colisTransport.transport.dateArrivee ? colisTransport.transport.dateArrivee|date('d/m/Y H:i') : 'Non définie' }}</small>
                                                </td>
                                                <td>{{ colisTransport.dateAssociation ? colisTransport.dateAssociation|date('d/m/Y H:i') : '' }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Aucun transport associé à ce colis
                            </div>
                            <div class="text-center py-3">
                                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#transportModal">
                                    <i class="fas fa-plus-circle me-1"></i> Ajouter un transport
                                </button>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Onglet Photos -->
                    <div class="tab-pane fade" id="photos" role="tabpanel" aria-labelledby="photos-tab">
                        {% if coli.photos is defined and coli.photos|length > 0 %}
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                {% for photo in coli.photos %}
                                    <div class="col">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-header py-2 bg-light d-flex justify-content-between align-items-center">
                                                <div>
                                                    <i class="fas fa-image me-2 text-primary"></i>
                                                    <span class="small">Photo #{{ loop.index }}</span>
                                                </div>
                                                <small class="text-muted">{{ photo.dateUpload ? photo.dateUpload|date('d/m/Y') : '' }}</small>
                                            </div>
                                            <img src="{{ asset('uploads/photos/' ~ photo.urlPhoto) }}" class="card-img-top img-fluid" alt="Photo du colis" style="height: 200px; object-fit: cover;">
                                            {% if photo.description %}
                                                <div class="card-body p-3">
                                                    <p class="card-text small mb-0">{{ photo.description }}</p>
                                                </div>
                                            {% endif %}
                                            <div class="card-footer bg-transparent d-flex justify-content-between">
                                                <a href="{{ asset('uploads/photos/' ~ photo.urlPhoto) }}" class="btn btn-sm btn-outline-primary" target="_blank">
                                                    <i class="fas fa-search-plus me-1"></i> Agrandir
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer cette photo ?')) { /* Ajouter l'appel AJAX pour supprimer */ }">
                                                    <i class="fas fa-trash me-1"></i> Supprimer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Aucune photo pour ce colis
                            </div>
                            <div class="text-center py-3">
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#photoModal">
                                    <i class="fas fa-plus-circle me-1"></i> Ajouter une photo
                                </button>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Onglet Documents -->
                    <div class="tab-pane fade" id="documents" role="tabpanel" aria-labelledby="documents-tab">
                        {% if coli.documents is defined and coli.documents|length > 0 %}
                            <div class="row row-cols-1 row-cols-md-3 g-4">
                                {% for document in coli.documents %}
                                    <div class="col">
                                        <div class="card shadow-sm h-100">
                                            <div class="card-header py-2 bg-light d-flex justify-content-between align-items-center">
                                                {% set icon = 'fas fa-file' %}
                                                {% if document.cheminStockage|split('.')|last == 'pdf' %}
                                                    {% set icon = 'fas fa-file-pdf text-danger' %}
                                                {% elseif document.cheminStockage|split('.')|last in ['doc', 'docx'] %}
                                                    {% set icon = 'fas fa-file-word text-primary' %}
                                                {% elseif document.cheminStockage|split('.')|last in ['xls', 'xlsx'] %}
                                                    {% set icon = 'fas fa-file-excel text-success' %}
                                                {% endif %}
                                                <div>
                                                    <i class="{{ icon }} me-2"></i>
                                                    <span class="small text-truncate">{{ document.nomFichier }}</span>
                                                </div>
                                                <span class="badge bg-secondary">{{ document.typeDocument }}</span>
                                            </div>
                                            <div class="card-body p-3">
                                                <p class="card-text small text-muted mb-1">
                                                    <i class="fas fa-calendar-alt me-1"></i> Ajouté le {{ document.dateUpload|date('d/m/Y H:i') }}
                                                </p>
                                                <p class="card-text small mb-0">
                                                    <i class="fas fa-file-alt me-1"></i> {{ document.cheminStockage }}
                                                </p>
                                            </div>
                                            <div class="card-footer bg-transparent d-flex justify-content-between">
                                                <a href="{{ asset('uploads/documents/' ~ document.cheminStockage) }}" class="btn btn-sm btn-outline-primary" target="_blank">
                                                    <i class="fas fa-download me-1"></i> Télécharger
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce document ?')) { /* Ajouter l'appel AJAX pour supprimer */ }">
                                                    <i class="fas fa-trash me-1"></i> Supprimer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>Aucun document pour ce colis
                            </div>
                            <div class="text-center py-3">
                                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#documentModal">
                                    <i class="fas fa-plus-circle me-1"></i> Ajouter un document
                                </button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_colis_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Retour à la liste
            </a>
            
            <div>
                <a href="{{ path('app_colis_edit', {'id': coli.id}) }}" class="btn btn-warning me-2">
                    <i class="fas fa-edit me-1"></i>Modifier
                </a>
                
             {% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('app_colis_delete', {'id': coli.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ coli.id) }}">
        <button class="btn btn-danger">
            <i class="fas fa-trash-alt me-1"></i>Supprimer
        </button>
    </form>
{% endif %}
            </div>
        </div>
    </div>

    <!-- Modales pour les actions rapides -->
    <!-- Modal Photo -->
    <div class="modal fade" id="photoModal" tabindex="-1" aria-labelledby="photoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-light">
                    <h5 class="modal-title" id="photoModalLabel"><i class="fas fa-camera me-2 text-primary"></i>Ajouter une photo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(photo_form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(photo_form.file, null, {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-upload"></i></span>
                                {{ form_widget(photo_form.file, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(photo_form.file) }}
                            </div>
